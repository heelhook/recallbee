section#home-slider
  .container
    .row
      .main-slider
        .slide-text
          h1= @header_ab_test
          p
            | We track all your kids' toys and notify you immediately when they have safety issues.

          - if current_user
            a.btn.btn-highlight.btn-common[href="#"] OPEN YOUR DASHBOARD
          - else
            a.btn.btn-highlight.btn-common[href=new_user_registration_path] START TRACKING TOYS FOR FREE
          a.btn.btn-common[href="#"] Learn more

        img.slider-hill[src="/assets/triangle/home/slider/hill.png" alt="slider image"]
        img.slider-house[src="/assets/triangle/home/slider/house.png" alt="slider image"]
        img.slider-sun[src="/assets/triangle/home/slider/sun.png" alt="slider image"]
        img.slider-birds1[src="/assets/triangle/home/slider/birds1.png" alt="slider image"]
        img.slider-birds2[src="/assets/triangle/home/slider/birds2.png" alt="slider image"]
